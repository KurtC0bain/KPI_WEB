@model IEnumerable<AJAX_Photogallery.Models.Photo>

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
@if (Model.ToList().Count != 0)
{
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="@Model.ToList()[0].Link" alt="Slide">

                <div class="carousel-caption d-none d-md-block">
                    @Model.ToList()[0].Title
                </div>

                <form style="margin-left: 500px; margin-top: 200px;" asp-action="Delete" asp-route-id=" @Model.ToList()[0].Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                    <input type="hidden" asp-for=" @Model.ToList()[0].Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </form>
            </div>
        
            @for (var i = 1; i < Model.ToList().Count; i++)
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src="@Model.ToList()[i].Link" alt="Slide">
                    <div class="carousel-caption d-none d-md-block">
                        @Model.ToList()[i].Title
                    </div>
                    <form style="margin-left: 500px; margin-top: 200px;" asp-action="Delete" asp-route-id=" @Model.ToList()[i].Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                        <input type="hidden" asp-for=" @Model.ToList()[i].Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </div>
            }
        </div>
        

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}
<a style="margin-top:30px;" onclick="showInPopup('@Url.Action("AddOrEdit","Gallery",null,Context.Request.Scheme)','Add photo')" class="btn btn-success text-white"><i class="fas fa-random"></i> Add Photo</a>


<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
